{
    "genericInfo": {
        "logo": {
            "type": "box", "children": [{
                "type": "image", "src": "cloudid-logo.png", "width": 200, "alt": "CloudID Logo"
            }]
        }
    },
    "routes": [
        {
            "path": "/", "redirectTo": "/register"
        },
        {
            "path": "/register", "descriptor": "default/registration.json",
            "screen": "Register", "layout": "SplitColumn"
        },
        {
            "path": "/register/success", "descriptor": "default/registration-success.json",
            "screen": "RegisterSuccess", "layout": "SingleColumn"
        },
        {
            "path": "/setup", "descriptor": "default/setup-account.json",
            "screen": "AccountSetup", "layout": "SplitColumn"
        },
        {
            "path": "/login", "descriptor": "default/login.json",
            "screen": "Login", "layout": "SingleColumn"
        },
        {
            "path": "*", "redirectTo": "/login"
        }
    ]
}